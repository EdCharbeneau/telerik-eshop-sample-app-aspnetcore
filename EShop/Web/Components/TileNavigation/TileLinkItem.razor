<a href="/products/category?subCategory=@SubCategoryId">
    <div class="category-heading">@Heading</div>
    <img src="/images/@(imageUrl).png" class="@ImageCss" />
</a>

@code {

    [Parameter, EditorRequired]
    public string Heading { get; set; } = "Untitled";

    [Parameter]
    public string ImageCss { get; set; } = "category-large-image";

    string SubCategoryId => Heading;

    [Parameter]
    public string? ImageUrl { get; set; }

    private string imageUrl => ImageUrl is null ?
            Heading.Replace(" and ", "_")
                   .Replace(" & ", "_")
                   .Replace(" ", "_")
                   .ToLowerInvariant() : ImageUrl;
}
