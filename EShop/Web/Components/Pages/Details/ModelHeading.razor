@using Web.Components.Rating
<div class="model-heading">
	<div class="model-title">
			@if (Model.Model == null)
			{
				@Model.Name
			}
			else
			{
				@Model.Model
			}
	</div>
	<Rating AverageRating="@(Model.AverageRating ??= 0)"/>
</div>

@code {
	[Parameter]
	public ProductDetailsViewModel Model { get; set; } = new();
}
