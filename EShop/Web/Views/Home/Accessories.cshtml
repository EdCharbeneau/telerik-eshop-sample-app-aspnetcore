@using Web.Views.Home.Accessories
@{
	ViewData["Title"] = "Accessories";
}

<div class="sub-category-container wrap-width">
	@(Html.Kendo().Breadcrumb()
		.Name("breadcrumb")
		.Navigational(true)
		.Items(items =>
		{
			items.Add()
			.Type(BreadcrumbItemType.RootItem)
			.Href(@Url.Action("Index", "Home"))
			.ShowText(false)
			.Icon("home")
			.ShowIcon(true);
			items.Add()
			.Type(BreadcrumbItemType.Item)
			.Href(@Url.Action("Accessories", "Home"))
			.Text("Accessories")
			.ShowText(true);
		})
	)
	<component type="typeof(AccessoriesNavigation)" render-mode="Static" />

</div>
