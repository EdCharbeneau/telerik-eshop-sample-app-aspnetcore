@using Web.Views.Home.Components
@{
	ViewData["Title"] = "Components";
}


<div class="sub-category-container wrap-width">
	@(Html.Kendo().Breadcrumb()
		.Name("breadcrumb")
		.Navigational(true)
		.Items(items =>
		{
			items.Add()
			.Type(BreadcrumbItemType.RootItem)
			.Href(@Url.Action("Index", "Home"))
			.ShowText(false)
			.Icon("home")
			.ShowIcon(true);
			items.Add()
			.Type(BreadcrumbItemType.Item)
			.Href(@Url.Action("Components", "Home"))
			.Text("Components")
			.ShowText(true);
		})
	)
	<component type="typeof(ComponentsNavigation)" render-mode="Static" />

</div>

