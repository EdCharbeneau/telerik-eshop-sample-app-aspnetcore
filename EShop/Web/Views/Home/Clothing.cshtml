@using Web.Components.Pages.Home.Clothing
@{
	ViewData["Title"] = "Clothing";
}

<div class="sub-category-container wrap-width">
	@(Html.Kendo().Breadcrumb()
		.Name("breadcrumb")
		.Navigational(true)
		.Items(items =>
		{
			items.Add()
			.Type(BreadcrumbItemType.RootItem)
			.Href(@Url.Action("Index", "Home"))
			.ShowText(false)
			.Icon("home")
			.ShowIcon(true);
			items.Add()
			.Type(BreadcrumbItemType.Item)
			.Href(@Url.Action("Clothing", "Home"))
			.Text("Clothes")
			.ShowText(true);
		})
	)

	<component type="typeof(ClothingNavigation)" render-mode="Static"/>
</div>